{
  "manifest_version": 3,
  "name": "SafeSurfer - URL Guardian",
  "version": "1.0",
  "description": "Scans URLs you visit and warns you about malicious or phishing sites.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "48": "icon48.png"
  }
}